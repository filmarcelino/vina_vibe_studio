  "include": [],
  "references": [
    { "path": "./packages/agents-core" },
    { "path": "./packages/asset-pipelines" },
    { "path": "./packages/data-adapters" },
    { "path": "./packages/design-tokens" },
    { "path": "./packages/diff-patcher" },
    { "path": "./packages/overlay-mapper" },
    { "path": "./apps/studio" },
    { "path": "./apps/preview-runner" }
  ]
}